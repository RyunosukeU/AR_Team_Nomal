{
    "compilerOptions": {
      // ソースマップを有効化
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "target": "es5",
      "lib": ["ES5", "DOM"],
      // TSのモジュールはES Modulesとして出力
      "module": "ES2015",
      // 厳密モードとして設定
      "strict": true,
      "moduleResolution":"Node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
    }
  }